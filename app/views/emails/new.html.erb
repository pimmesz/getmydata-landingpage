<div class="flexcontainer">

  <div class="flexitem textbox">
    <h1>What do they know about me?</h1>
  </div>
  <div class="flexitem textbox">
    <h3>Have you always wondered what companies know about you? <br>We at GetMyData help you find out!</h3>
  </div>

  <div class="form">
    <div class="flexitem">
      <%= form_for(@email) do |f| %>
      <% if @email.errors.any? %>
      <div class="errors-container">
        <ul>
          <% @email.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: 'form-control' %>
      </div>

      <%= f.submit "Submit", class: 'formbtn' %>
      <% end %>
    </div>
  </div>
</div>
